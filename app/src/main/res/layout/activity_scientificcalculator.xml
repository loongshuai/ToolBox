<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/light_background">

    <!-- 标题栏 -->
    <LinearLayout
        android:id="@+id/main_toolbar"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:background="@color/primary_blue"
        android:elevation="4dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="科学计算器"
            android:textColor="@android:color/white"
            android:textSize="22sp"
            android:textStyle="bold" />

    </LinearLayout>

    <!-- 结果显示区 -->
    <EditText
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="169dp"
        android:background="@drawable/edittext_background"
        android:focusable="false"
        android:gravity="end|center_vertical"
        android:imeOptions="actionDone"
        android:padding="16dp"
        android:textColor="@color/dark_text"
        android:textSize="42sp" />

    <!-- 按钮网格布局 -->
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:columnCount="6"
        android:rowCount="5"
        android:padding="8dp"
        android:background="@color/grid_background">

        <!-- 第一行 -->
        <Button
            android:id="@+id/cls"
            style="@style/CalcButton.Equal"
            android:text="C"/>
        <Button
            android:id="@+id/sub"
            style="@style/CalcButton.Operator"
            android:text="-"/>
        <Button
            android:id="@+id/add"
            style="@style/CalcButton.Operator"
            android:text="+"/>
        <Button
            android:id="@+id/div"
            style="@style/CalcButton.Operator"
            android:text="÷"/>
        <Button
            android:id="@+id/mul"
            style="@style/CalcButton.Operator"
            android:text="×"/>
        <Button
            android:id="@+id/Backspace"
            style="@style/CalcButton.Equal"
            android:text="⌫"/>

        <!-- 第二行 -->
        <Button
            android:id="@+id/square_root"
            style="@style/CalcButton.Operator"
            android:textSize="14sp"
            android:text="√x"/>
        <Button
            android:id="@+id/Triple_root"
            style="@style/CalcButton.Operator"
            android:textSize="12sp"
            android:text="³√x"/>
        <Button
            android:id="@+id/XsquareY"
            style="@style/CalcButton.Operator"
            android:textSize="12sp"
            android:text="y√x"/>
        <Button
            android:id="@+id/seven"
            style="@style/CalcButton.Number"
            android:text="7"/>

        <Button
            android:id="@+id/eight"
            style="@style/CalcButton.Number"
            android:text="8"/>
        <Button
            android:id="@+id/nine"
            style="@style/CalcButton.Number"
            android:text="9"/>

        <!-- 第三行 -->
        <Button
            android:id="@+id/x_power_2"
            style="@style/CalcButton.Operator"
            android:textSize="12sp"
            android:text="X²"/>
        <Button
            android:id="@+id/x_power_3"
            style="@style/CalcButton.Operator"
            android:textSize="12sp"
            android:text="X³"/>
        <Button
            android:id="@+id/x_power_y"
            style="@style/CalcButton.Operator"
            android:textSize="12sp"
            android:text="x^y"/>
        <Button
            android:id="@+id/four"
            style="@style/CalcButton.Number"
            android:text="4"/>
        <Button
            android:id="@+id/five"
            style="@style/CalcButton.Number"
            android:text="5"/>
        <Button
            android:id="@+id/six"
            style="@style/CalcButton.Number"
            android:text="6"/>

        <!-- 第四行 -->
        <Button
            android:id="@+id/left"
            style="@style/CalcButton.Equal"
            android:text="("/>
        <Button
            android:id="@+id/right"
            style="@style/CalcButton.Equal"
            android:text=")"/>
        <Button
            android:id="@+id/pai"
            style="@style/CalcButton.Operator"
            android:text="兀"/>
        <Button
            android:id="@+id/one"
            style="@style/CalcButton.Number"
            android:text="1"/>
        <Button
            android:id="@+id/two"
            style="@style/CalcButton.Number"
            android:text="2"/>
        <Button
            android:id="@+id/three"
            style="@style/CalcButton.Number"
            android:text="3"/>
        <!-- 第五行 -->
        <Button
            android:id="@+id/sin"
            style="@style/CalcButton.Operator"
            android:textSize="12sp"
            android:text="sin"/>
        <Button
            android:id="@+id/cox"
            style="@style/CalcButton.Operator"
            android:textSize="10sp"
            android:text="cox"/>
        <Button
            android:id="@+id/tan"
            style="@style/CalcButton.Operator"
            android:textSize="10sp"
            android:text="tan"/>
        <Button
            android:id="@+id/zero"
            style="@style/CalcButton.Number"
            android:text="0"/>
        <Button
            android:id="@+id/spot"
            style="@style/CalcButton.Number"
            android:text="."/>
        <Button
            android:id="@+id/equal"
            style="@style/CalcButton.Equal"
            android:text="="/>
    </GridLayout>
</LinearLayout>
