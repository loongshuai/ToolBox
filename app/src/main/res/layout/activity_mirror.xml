<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <SurfaceView
        android:id="@+id/surfaceView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="true" />

    <LinearLayout
        android:id="@+id/brightness_control"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#00000000"
        android:padding="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_sun"
            android:outlineSpotShadowColor="@color/white"
            android:layout_gravity="center_vertical" />

        <SeekBar
            android:id="@+id/seekBarScreenBrightness"
            android:layout_width="180dp"
            android:layout_height="28dp"
            android:layout_marginStart="10dp"
            android:max="100"
            android:stepSize="10"
            android:thumbTint="@color/thumb_color"
            android:progressBackgroundTint="@color/white"
            android:progressTint="@color/white"
            android:progress="50"
            android:theme="@style/Widget.AppCompat.SeekBar.Discrete" /> <!-- 添加间距 -->
    </LinearLayout>

    <!-- Beauty Level Control (左下角) -->

    <!-- 存储 (右下角) -->

    <LinearLayout
        android:id="@+id/beauty_level_control"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="21dp"
        android:background="#00000000"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_beauty" />

        <SeekBar
            android:id="@+id/seekBarBeautyLevel"
            android:layout_width="180dp"
            android:layout_height="30dp"
            android:layout_marginStart="10dp"
            android:max="100"
            android:progress="0"
            android:progressBackgroundTint="@color/white"
            android:progressTint="@color/white"
            android:stepSize="10"
            android:theme="@style/Widget.AppCompat.SeekBar.Discrete"
            android:thumbTint="@color/blue_200" /> <!-- 添加间距 -->
    </LinearLayout>

    <Button
        android:id="@+id/btnCapture"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="00dp"
        android:layout_marginLeft="00dp"
        android:layout_marginEnd="00dp"
        android:layout_marginRight="00dp"
        android:layout_marginBottom="00dp"
        android:background="?attr/selectableItemBackground"
        android:drawableTop="@drawable/ic_save"
        android:shadowColor="@color/blue_200"
        android:text="保存"
        android:textColor="@color/colorPrimary" />
</RelativeLayout>
