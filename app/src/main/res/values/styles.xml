<resources>
    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/dialog_enter</item>
        <item name="android:windowExitAnimation">@anim/dialog_exit</item>
    </style>
    <!-- 基础按钮样式 -->
    <style name="CalcButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_rowWeight">1</item>
        <item name="android:textSize">24sp</item>
        <item name="android:minHeight">0dp</item>
        <item name="shapeAppearance">@style/ShapeAppearance.MediumComponent</item>
        <item name="strokeColor">@color/button_stroke</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <!-- 数字按钮 -->
    <style name="CalcButton.Number" parent="CalcButton">
        <item name="android:backgroundTint">@color/number_button_bg</item>
        <item name="android:textColor">@color/dark_text</item>
    </style>
    <style name="CalcButton.suanshu" parent="CalcButton">
        <item name="android:textColor">@color/dark_text</item>
    </style>

    <!-- 运算符按钮 -->
    <style name="CalcButton.Operator" parent="CalcButton">
        <item name="android:backgroundTint">@color/operator_button_bg</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!-- 等号按钮 -->
    <style name="CalcButton.Equal" parent="CalcButton">
        <item name="android:backgroundTint">@color/equal_button_bg</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

</resources>